<script type="text/javascript"> 

var iframeAdshowbtm = $("#adshowbtm");
var iframeOffsetjq = iframeAdshowbtm.offset();
var iframeDivhgt = iframeOffsetjq.top;
iframeDivhgt = iframeDivhgt - 600;
var iframeDistanceTop = iframeDivhgt;
var iframeLoaded = false;
$(function() {
	$(window).scroll(function() {
		if ($(window).scrollTop() > iframeDistanceTop) {
			if(iframeLoaded == false){
				$("#article-comment-frame").attr("src",$("#article-comment-frame").attr("data-original"));
				iframeLoaded = true;
			}
		}
	});
});
$(".reload_image_captcha").click(function(){
	var _id = this.id;
	$.ajax({
		"type"		:	"POST",
		"url"		:	"/request-handler/reload-captcha",
		"success"	:	function(data){
			if(data!=undefined){
				try{
					var _res = eval(data);
					if(_res.err!=undefined && _res.id!=undefined && _res.msg!=undefined){
						if(_res.err=='0'){
							var captchaId = "#captcha_id_"+_id;
							var imgCaptchaBox = "#image_captcha_box_"+_id;
							$(captchaId).val(_res.id);
							$(imgCaptchaBox).html(_res.msg);
						}else{
							alert(_res.msg);
						}
					}
				}catch(e){}
			}
		}
	});
	return false;	
});

$(window).scroll(function () {
	  var $menu = $('#menu'),
	  $conten = $('#contContainer'),
	  scrollpos = $(window).scrollTop();
	  if (scrollpos >= 175) {
	      $conten.css('padding-top','70px' );
	  } else {
	      $conten.css('padding-top','23px');
	  }
});

$(".emilBoxFancyBox").click(function(){
$.fancybox({
	'href'			: "/request-handler/email-send-box?data=%7B%22id%22%3A%22bottom%22%2C%22siteImagePath%22%3A%22%5C%2Finclude%5C%2F_mod%5C%2Fsite%5C%2Fimages%5C%2F%22%2C%22varItemId%22%3A%22115020601799%22%2C%22heading%22%3A%22%3Cb%3EDevangshu+Datta%3A%3C%5C%2Fb%3E+Explaining+Delhi%27s+polls+-+and+bets%22%2C%22type%22%3A%22article%22%2C%22articleUri%22%3A%22http%3A%5C%2F%5C%2Fwww.business-standard.com%5C%2Farticle%5C%2Fopinion%5C%2Fdevangshu-datta-explaining-delhi-s-polls-and-bets-115020601799_1.html%22%7D",
	'titlePosition'	: 'none',
	'transitionIn'	: 'elastic',
	'transitionOut'	: 'elastic',
	'scrolling'		: 'no',
	'autoScale'		: false,
	'width'			: 740,
	'height'		: 280,
	'type'			: 'iframe'
});
});

function disclaimerBox(){
	$.fancybox({
		'href'			: "/comment/manager/comment-guidelines",
		'titlePosition'	: 'none',
		'transitionIn'	: 'elastic',
		'transitionOut'	: 'elastic',
		'scrolling'		: 'no',
		'autoScale'		: true,
		'autoDimensions': false,
		'width'			: 900,
		'height'		: 400
	});	
}
