jQuery( "#div-gpt-sbb" ).mouseover(function() {
            jQuery( "#dfp-sbb-top" ).hide();
            jQuery( "#dfp-sbb-bottom" ).show();
        }).mouseout(function() {
            jQuery( "#dfp-sbb-top" ).show();
            jQuery( "#dfp-sbb-bottom" ).hide();
        });
</script></div>
		</body>
</html>
