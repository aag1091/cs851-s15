            var commentparams =
            {
                // Required parameters:
                categoryID: 'News',
                containerID: 'commentsDiv',

                // Optional parameters:
                streamTitle: 'SNP activist \'killed over child sex files\'',
                streamID: 'DXpost541793',
                deviceType: 'auto',
                cid: '',
                width: '100%',
                enabledProviders: 'facebook, twitter, google,googleplus',
                useSiteLogin: true,
                onSiteLoginClicked: onSiteLoginHandler,   // registering to the onSiteLoginClicked event
                onCommentSubmitted: onCommentSubmitted
            };
            // Load the Comments Plugin
            gigya.socialize.showCommentsUI(commentparams);

            function printResponse(responseObject){
            	if(typeof responseObject !== 'undefined' && typeof responseObject.streamInfo !== 'undefined' && typeof responseObject.streamInfo.commentCount !== 'undefined'){
            		var numberofcomments = responseObject.streamInfo.commentCount;
            		if(numberofcomments!=26){
            			$.ajax({
            				url: '/posts/ajax_updatecommentcount/541793/26/'+numberofcomments,
            			});
            		}
            		$('#gigyacomments header span.main-label').text(numberofcomments+' Comment'+((numberofcomments!=1)?'s':''));
            	}
            }
            function onCommentSubmitted(event) {
                $.ajax({
            		url: '/trackings/addComment/541793/1/0/0/1',
            	});
            }
            gigya.comments.getStreamInfo({categoryID:'News', streamID:'DXpost541793', callback:printResponse});
