		jQuery(document).ready(function ($) {
		  // KM events
		  _kmq.push(['trackClick', '.arrow-not-auth ', 'Attempted to upvote link while logged out']);
		  _kmq.push(['trackClick', '.arrow', 'Upvoted or Unvoted post']);
		  _kmq.push(['trackClick', 'sign-out-nav-link', 'Logged Out / Signed Out']);

		  $('.idea-lightbulb').click(function () {
		  	_kmq.push(['record', 'Clicked Idea Lightbulb', {'Location': 'top nav lightbulb'}]);
		  });

		  $('.idea-form-footer-canvas-link').click(function () {
			  _kmq.push(['record', 'Clicked GrowthCanvas link in form footer']);
			});

			$('.try-idea-form-cta').click(function () {
			  _kmq.push(['record', 'Clicked Try Idea Form CTA']);
			});

			// Topic Menu
			$('.btn-more-topics').click(function () {
			  _kmq.push(['record', 'Clicked Topic Dropdown']);
			});

		  // on article submit
		  $('#submit-article-form').submit( function (e) {
				var c = $('#category').find(':selected').text();
				var t = $('#title').val();
				var u = $('#content').val();
				_kmq.push([ 'record', 'Submitted Article', { 
						'Submitted Article Title'			: t, 
						'Submitted Article URL'				: u,
						'Submitted Article Category'	: c 
					}
				]);
			});
			// on question submit
		  $('#submit-question-form').submit( function (e) {
				var q = $('#question-text').val();
				_kmq.push([ 'record', 'Submitted Question / Ask GH', {'Submitted Question':q} ]);
		  });

	//conditional events:
				_kmq.push(['trackClick', '.comment-vote', 'Upvoted or Unvoted Comment / Answer']);
			_kmq.push(['trackClick', 'submit-comment', 'Submitted Comment / Answer', { 'Post Title':"From Minimum Viable Course to 100,000 Users" } ]);
	
				_kmq.push(['trackClickOnOutboundLink', '.post-item-title', 'Clicked Post Link', { 'Post Title of Clicked Link':"From Minimum Viable Course to 100,000 Users", 'Comment Count of Clicked Link': 6, 'Post Author of Clicked Link': "dylan" } ]);
			_kmq.push(['trackClick', 'submit-post-details-btn', 'Edited Post Summary / Question Details', { 'Edited Post':"From Minimum Viable Course to 100,000 Users" } ]);
			});

		// Log in with Twitter
		_kmq.push(['trackClickOnOutboundLink', '.twitter-login-btn', 'Clicked Log In With Twitter']);
	</script>
