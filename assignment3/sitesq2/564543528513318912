		            {{/outbound}}
		            {{#outbound}} 
		            	<a href="{{ url }}" {{#outbound}}onclick="trackOutboundLink({{ url }}); return false;"{{/outbound}} target="_blank">{{{ highlighted_title }}}</a>
		            {{/outbound}}
		          {{/highlighted_title}}
		        </p>
		        {{#highlighted_url}}
		          <div class="tiny grey">{{{ highlighted_url }}}</div>
		        {{/highlighted_url}}
