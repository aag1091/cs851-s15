<script type="text/javascript">
if (Get_Cookie('_flash')) {
    var unserialize = function(serializedString) {
        var str = serializedString;
        var obj = {}, p, idx, val;
        if (!str) {
            return obj;
        }
        var pairs = str.split('&');
        for (var i=0, n=pairs.length; i < n; i++) {
            p = pairs[i].split('=');
            idx = p[0];
            if (idx.indexOf("[]") == (idx.length - 2)) {
                // Eh um vetor
                var ind = idx.substring(0, idx.length-2)
                if (obj[ind] === undefined) {
                    obj[ind] = [];
                }
                obj[ind].push(decodeURIComponent(p[1]));
            } else {
                obj[idx] = decodeURIComponent(p[1]);
            }
        }
        return obj;
    };

    var _flashMessages = unserialize(Get_Cookie('_flash'));
    if (_flashMessages && _flashMessages.data){
        _flashMessages = $.parseJSON(_flashMessages.data);
        for(var key in _flashMessages) {
            var message = _flashMessages[key];
            if (typeof(message) == 'object') {
                document.write('<div class="attention ">' +message.message+ '<\/div>');
            }
        }
    }
    Delete_Cookie('_flash', '/', sCookieDomain);
}
</script>
