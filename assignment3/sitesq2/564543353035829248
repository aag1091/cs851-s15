var menuItemsArray = ['getInfo','connect','getInvolved','findFood'];
var menuClassesArray = ['menuGetInfoCurrent','menuNetworkCurrent','menuGetInvolvedCurrent','menuFindFoodCurrent'];
var menuStaticClassesArray = ['menuGetInfoCurrentStatic','menuNetworkCurrentStatic','menuGetInvolvedCurrentStatic','menuFindFoodCurrentStatic'];
var currentPage = 0;
 
function hideMenuDrop(id) {	
	  jQuery('#drop_'+id).css({display : 'none'});
	  jQuery('#menuItem_' + menuItemsArray[id]).removeClass(menuClassesArray[id]);    	  
	  if (id == currentPage) {
		  jQuery('#menuItem_' + menuItemsArray[id]).addClass(menuStaticClassesArray[id]);     
	  }
}

function showMenuDrop(id) {	
	  jQuery('#drop_'+id).css({display : 'block'});	  	   
	  jQuery('#menuItem_' + menuItemsArray[id]).addClass(menuClassesArray[id]);  
	  if (id == currentPage){         
         jQuery('#menuItem_' + menuItemsArray[id]).removeClass(menuStaticClassesArray[id]);    	  
       }
}

function hideAllDrops() {
  hideMenuDrop(0);
  hideMenuDrop(1);
  hideMenuDrop(2);
  hideMenuDrop(3);
}
	
// When the DOM is ready, init scripts.
