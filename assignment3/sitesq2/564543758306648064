          var $el = $(this),
            $parent = $el.parent(),
            availableHeight = $parent.innerHeight() - $parent.css('padding-top').replace('px', '') - $parent.css('padding-bottom').replace('px', ''),
            elementHeight = $el.outerHeight();

          $el.css('margin-top', (availableHeight - elementHeight)/2 + 'px');
        });


      };
      // Enable swiping on featured posts block
      blogFunctions.swipeElement = function (el) {
        var $el = $(el),
          $list = $(el).find('ul,ol').first(),
          leftBoundary = 0,
          rightBoundary = $el.innerWidth(),
          topBoundary = 0,
          bottomBoundary = $el.innerHeight(),
          xPos = 0,
          listWidth = $list.outerWidth();

        $list.css({'position': 'relative', 'left' : 0, 'top' : 0});

        $el.swipe({
          swipe:function(event, direction, distance, duration, fingerCount) {
              var adjustment = 0,
                tempXPs = 0;

              // movement to swipe ratio is 2, to make slider seem more responsive
              distance = distance * 2;
              // translate left into a negative distances (a lower left coordinate)
              if(direction === 'left') {
                distance = distance * -1;
              }

              // adjust for over swipe right
              if ( xPos + distance > 0  ) {
                console.log('overswipe right');
                adjustment = xPos + distance;
                distance - adjustment;
              }
              // adjust for over swipe left
              else if (xPos + listWidth + distance < rightBoundary) {
                console.log('overswipe left');
                adjustment = xPos + listWidth + distance - rightBoundary;
              }

              // max the bounce at either end of the list to 30px
              if (adjustment > 30) {
                tempXPos = xPos + distance - adjustment + 30;
              }
              else if (adjustment < -30) {
                tempXPos = xPos + distance - adjustment - 30;
              }
              else {
               tempXPos = xPos + distance;
              }
              xPos  = xPos + distance - adjustment;
              $list.animate({'left': tempXPos}, 400).animate({'left': xPos}, 200);
              console.log('new left coord: ' + xPos);
          },
          threshold: 0,
          excludedElements:"button, input, select, textarea, .noSwipe"
        });
      };
      $(document).ready(function() {
        // Add Click Function to Links that Point to IDs
        $("a[href^='#']").click(function() {
          // get the href attribute of the internal link
          // then strip the first character off it (#)
          // leaving the corresponding id attribute
          $("#"+$(this).attr("href").slice(1)+"")
            // give that id focus (for browsers that didn't already do so)
            .focus()
            // add a highlight effect to that id (comment out if not using)
            .effect("highlight", {}, 3000);
        });

        // flag js as enabled by removing no-js class
        $('body').on('click', 'a.search', function() {
          $searchControl = $(this);
          $searchForm= $searchControl.parent().find('form.search-form');

          blogFunctions.showSearchForm($searchControl, $searchForm);
        });
        $('body').on('focus', 'a.search', function() {
          $searchControl = $(this);
          $searchForm= $searchControl.parent().find('form.search-form');

          blogFunctions.showSearchForm($searchControl, $searchForm);
        });
        blogFunctions.navToggle('div.blog-nav');
        blogFunctions.vCenterBox('div.center-box');
        blogFunctions.LIStickyNav();
	blogFunctions.LIStickyCTA();
        // blogFunctions.swipeElement('div#featuredSwipe');
      });
    </script>
