  </body>
</html>

<script>
  var blogFunctions = blogFunctions || {};

  blogFunctions.replyToPostToggle = function ($replyform, $btn) {
    console.log('is toggling');
    var isMainComposeBtn = $btn.hasClass('.compose-reply');
    if($replyform.css('display') == 'none') {
      console.log('is revealing');
      $replyform.slideDown();
    }
    else if (isMainComposeBtn) {
      console.log('is hiding');
      $replyform.slideUp();
    }
    // intercept the link behavior if it's the main compose-reply button
    return !isMainComposeBtn;
  }
  $(document).ready(function() {
    console.log('document is ready');
    $('body').on('click', '.compose-reply, .comment-reply-link', blogFunctions.replyToPostToggle($('div#respond'), $(this)));
  });
</script>
