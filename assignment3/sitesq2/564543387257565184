                    <script type="text/javascript">
                        jQuery(document).ready(function () {
                            jQuery.validator.messages.required = "";
                            jQuery("#ajaxEmailtoFriendFormTop").validate({
                                rules : {
                                    sendername      : { required : true, minlength  : 2 },
                                    sendermail      : { required : true, email      : true },
                                    recipientname   : { required : true, minlength  : 2 },
                                    recipientemail  : { required : true, email      : true },
                                    sendermessage   : { required : true, minlength  : 5 }
                                },
                                errorPlacement : function (error, element) {
                                    error.appendTo('#errfrmMsgTop');
                                },
                                submitHandler : function (form) {
                                    jQuery.ajax({
                                        type        : "post",
                                        url         : the_ajax_sailthruapi.ajaxurl_sailthruapi,
                                        dataType    : "json",
                                        data        : jQuery(form).serialize(),
                                        success     : function (response) {
                                            if(response.result == 'success') {
                                                _gaq.push(['_trackEvent', 'ShareButtons', 'email', 'SubmitTop']);
                                                jQuery('<label class="success">Your email was sent</label>').appendTo('#errfrmMsgTop');
                                                jQuery('#errfrmMsgTop').delay(2000).fadeOut('fast', function () {
                                                    jQuery(this).empty().show();
                                                });
                                                jQuery('#ajaxEmailtoFriendFormTop')[0].reset();
                                            }else{
                                                jQuery('<label class="error">' + response.errors + '</label>').appendTo('#errfrmMsgTop');
                                                jQuery('#errfrmMsgTop').delay(3000).fadeOut('slow', function () {
                                                    jQuery(this).empty().show();
                                                });
                                            }
                                        },
                                        error   : function (xhr, ajaxOptions, thrownError) {
                                            if(thrownError) {
                                                jQuery('<label class="error">Your email didn\'t send. Please try again.</label>').appendTo('#errfrmMsgTop');
                                                jQuery('#errfrmMsgTop').delay(3000).fadeOut('slow', function () {
                                                    jQuery(this).empty().show();
                                                });
                                            }
                                        }
                                    });
                                    return false;
                                }
                            });
                        });
                    </script>
                </div>
