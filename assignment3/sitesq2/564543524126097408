// Collapse text 'Advertise Here' in right rail if rectangle ad unit is not displaying.
(function()
{
var elusive = document.getElementById("mrec_300x250");
if (elusive != null) {
	elusive = elusive.clientHeight;
	if (elusive < 100) {
	document.getElementById("nested_div").style.display = "none";
	}
}
var elusiveInline = document.getElementById("ad-inline-detail");
if (elusiveInline != null) {
	elusiveInline = elusiveInline.clientHeight;
	if (elusiveInline < 5) {
		document.getElementById("sponsor-label").style.display = "none";
		}	
}
