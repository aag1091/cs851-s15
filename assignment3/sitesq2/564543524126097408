jQuery(document).ready(function() {
	jQuery('.follow_social dl dt').bind('click', function(event) {
		event.preventDefault();
		var currSocialClass = '';
		if (!jQuery(this).hasClass('current')) {
			currSocialClass = jQuery(this).attr('class');
			jQuery('.follow_social_detail.current').removeClass('current');
			jQuery('.follow_social_detail.' + currSocialClass).addClass('current');
		} else {
			jQuery(this).removeClass('current');
			currSocialClass = jQuery(this).attr('class');
		}
		var leftSocialPos = jQuery(this).position().left + 8;
		if (currSocialClass != 'subscribe')
			leftSocialPos = leftSocialPos - 2;
		var socialPos = leftSocialPos + 'px top';
		jQuery('.follow_social_detail.current').css('background-position',socialPos);
	});
	jQuery('.follow_social dl dt.current').trigger('click');
});
