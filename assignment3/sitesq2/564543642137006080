<script type="text/javascript">
	$(document).ready(function() {
		$('.buying-guide-dropdown').click(function() {
			// Find the BuyingGuideCategory ID
			var buyingGuideCategoryId = $(this).data('buying-guide-category-id');
			
			// Find the dropdown to use
			var buyingGuideCategoryDropdown = $('#buying-guide-ul-' + buyingGuideCategoryId);
			
			// If it is hidden - unhide it
			if (buyingGuideCategoryDropdown.attr('class') == 'hide')
			{
				buyingGuideCategoryDropdown.removeClass('hide');
			}
			else
			{
				buyingGuideCategoryDropdown.addClass('hide');
			}
		});
	});
</script>
