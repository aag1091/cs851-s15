<script type="text/javascript">
	function setUpBuySellsForms() {
		// If BusinessCategory is set, refine the options in BusinessSector using the 
		// businessSectorsIndexedOnBusinessCategoryId data set up in /auto/web-data-DATE.js
		if ($('#client_appbundle_businesssearchfilter_BusinessCategory').val()) {
			// Get a handle on the selected BusinessCategory ID
			var businessCategoryId = $('#client_appbundle_businesssearchfilter_BusinessCategory').val();
			
			// Remember the selected BusinessSector ID so that it can be re-selected
			var businessSectorId = $('#client_appbundle_businesssearchfilter_BusinessSector').val();

			// Build a new list of options			
			var opts = '';
			opts += '<option>Any</option>';
			$.each(businessSectorsIndexedOnBusinessCategoryId[businessCategoryId], function(key, businessSector) { 
				opts += '<option value="' + businessSector.id + '"';
				// If this BusinessSector was previously selected, re-select it
				if (businessSector.id == businessSectorId) { 
					opts += ' selected="selected"';
				}
				opts += '>' + businessSector.name + '</option>';
			});
			// Empty BusinessSector and add the freshly-created options
			$('#client_appbundle_businesssearchfilter_BusinessSector').empty().append(opts);
		}

			}

	$(document).ready(function() {
		setUpBuySellsForms();

		// On page load, if filter.asking_price.left_number is set, change the asking_price_minimum helper widget accordingly
		if ($('#client_appbundle_businesssearchfilter_asking_price_left_number').val()) {
			$('#asking_price_minimum').val($('#client_appbundle_businesssearchfilter_asking_price_left_number').val());
		}
		// On page load, if filter.asking_price.right_number is set, change the asking_price_maximum helper widget accordingly
		if ($('#client_appbundle_businesssearchfilter_asking_price_right_number').val()) {
			$('#asking_price_maximum').val($('#client_appbundle_businesssearchfilter_asking_price_right_number').val());
		}
		
		// If the asking_price_minimum helper widget changes, change filter.asking_price.left_number accordingly
		$('#asking_price_minimum').change(function() {
			$('#client_appbundle_businesssearchfilter_asking_price_left_number').val($('#asking_price_minimum').val());
		});
		// If the asking_price_maximum helper widget changes, change filter.asking_price.right_number accordingly
		$('#asking_price_maximum').change(function() {
			$('#client_appbundle_businesssearchfilter_asking_price_right_number').val($('#asking_price_maximum').val());
		});
		
		// When BusinessCategory changes, call setUpBuySellsForms 
		$('#client_appbundle_businesssearchfilter_BusinessCategory').change(setUpBuySellsForms);
		
		// When BusinessCategory changes, call setUpForm 
		$('#client_appbundle_webbusinessvaluationtype_BusinessCategory').change(setUpBuySellsForms);
		
		$('#sell-form').submit(function() {
			// Split full_name on the last space and copy the values into first_name and last_name
			var fullName = $('#full_name').val();
			var lastSpaceIndex = fullName.lastIndexOf(' ');
			var firstName = fullName.substring(0, lastSpaceIndex);
			var lastName = fullName.substring(lastSpaceIndex + 1);
			$('#client_appbundle_webbusinessvaluationtype_first_name').val(firstName);
			$('#client_appbundle_webbusinessvaluationtype_last_name').val(lastName);
		});
	});
</script>
	
	
