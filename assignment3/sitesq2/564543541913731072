    <!-- begin MenuClick -->
    <script type="text/javascript">
        
        var action = 1;
        $(document).ready(function(){
            $('#main-link').on({
                click: function(){
                    
                    $('.category-link').click(function() {
                        $('#page-blackout').hide();    
                    });
                    
                    $('#page-blackout').toggle();
                    if (action == 1){
                        $('#page-top-left').addClass('top-bar');
                        action = 2;
                        $('body').click(function(){
                            $('#page-blackout').hide();
                            $('#page-top-left').removeClass('top-bar');
                            action = 1;
                        });
                        
                        $('.category-link').click(function(){
                            $('#page-top-left').removeClass('top-bar');
                            action = 1; 
                        });
                    } else {
                        $('#page-top-left').removeClass('top-bar');
                        action = 1;
                    }
                }
            });    
        });
    </script>

