			function init() {
				var date = new Date();
				graphicUtils.drawBackground('background', 'container', date.getYear() + date.getMonth() + date.getDate());
				graphicUtils.styleText('intro');
				graphicUtils.styleText('header', 4);
				graphicUtils.setColor('footer', true);
				graphicUtils.setBackgroundColor('footerContainer', false);
				graphicUtils.setBorderColor('footerContainer', true);
				graphicUtils.setLinkColor('footer');
				graphicUtils.setBackgroundColor('logo', true);
				graphicUtils.setColor('logoText');
				graphicUtils.setBorderColor('name', true);
				graphicUtils.setBackgroundColor('name');
				graphicUtils.setColor('name', true);
				graphicUtils.setColor('intro');
				graphicUtils.setBorderColor('goButton', true);
				graphicUtils.setBackgroundColor('goButton', true);
				graphicUtils.setColor('goButton');
				graphicUtils.setColor('result', true);
				graphicUtils.setBorderColor('result', true);
				graphicUtils.setBackgroundColor('result');
				graphicUtils.setColor('incentive', true);
				graphicUtils.setBorderColor('incentive', true);
				graphicUtils.setBackgroundColor('incentive');
				graphicUtils.setLinkColor('incentive');
				graphicUtils.setBorderColor('postTweet', true);
				graphicUtils.setBackgroundColor('postTweet', true);
				graphicUtils.setColor('postTweet');
				graphicUtils.styleText('appText', 4);
				graphicUtils.styleText('mainMessage', 4);
				graphicUtils.setColor('iPhoneApp', false);
				graphicUtils.setColor('androidApp', false);

				_myNextTweet = new MyNextTweet();
				var date = new Date();

				_myNextTweet.setPlatformProperties({
					device: {
						type: 'web'
					},
					platform: {
						name: 'web'
					}
				});

				_myNextTweet.startApp({
					hash: date.getYear() + date.getMonth() + date.getDate()
				});
			}

