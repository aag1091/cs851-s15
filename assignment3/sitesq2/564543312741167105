	<script type="text/javascript" language="javascript">
		var domain = "";
		var MEC_City = "";
		var doc_loc = document.location + "";
		if (doc_loc.indexOf('metronews.') > -1) {
			domain = "geo.metronews.ca";
		}
		var nameEQ = "MECCity=";
		var ForceCity = "";
		var city_exist = false;

		function assign_MEC_City() {
			var ca = document.cookie.split(';');
			for (var i = 0; i < ca.length; i++) {
				var c = ca[i];
				while (c.charAt(0) == ' ') c = c.substring(1, c.length);
				if (c.indexOf(nameEQ) == 0) {
					city_exist = true;
					MEC_City = c.substring(nameEQ.length, c.length);
					if (MEC_City == "montreal") {
						MEC_City = "ottawa";
					} else if(MEC_City == "victoria") {
						MEC_City = "vancouver";
					} else if(MEC_City == "regina" || MEC_City == "saskatoon") {
						MEC_City = "calgary";
					} else if(MEC_City == "windsor" || MEC_City == "hamilton" || MEC_City == "london" || MEC_City == "kitchener") {
						MEC_City = "toronto";
					}
				};
			}
		}
		assign_MEC_City();

		if (!city_exist) {
			ForceDCity = "?&rand=" + Math.floor(Math.random() * 10000001);
			document.write('<script src="http://' + domain + '/' + ForceDCity + '">' + '<' + '/' + 'script>');
		}
	</script>
	<script language="javascript" type="text/javascript">
		assign_MEC_City();
	</script>
