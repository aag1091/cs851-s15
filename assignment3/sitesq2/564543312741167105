					document.write('<scr' + 'ipt language="javascript1.1" src="http://adserver.adtechus.com/addyn/3.0/5280.1/' + ad_no + '/0/-1/ADTECH;size=' + ad_x + 'x' + ad_y + ';key=calgary+alberta-post-secondary+mount-royal-university+1280038+single+single-post+postid-1280038+single-format-standard+mp6+typekit-enabled+customizer-styles-applied+en+home+highlander-enabled+highlander-light;alias=metro' + MEC_City + '-' + ad_alias + ';loc=' + ad_loc + ';target=_blank;grp=' + window.mec_adgroupid + ';misc=' + parseInt(Math.random() * 10000001) + '"></scri' + 'pt>');
				}
				/* ]]> */
			</script>
