<script language="javascript" type="text/javascript" defer="defer">
	jQuery(document).ready(function ($) {

		var city_selected = readCookie("MECCity");

		switch (city_selected) {
			case "regina":
			case "saskatoon":
			case "calgary":
				$('#show_for_city_calgary').show();
				break;
			case "edmonton":
				$('#show_for_city_edmonton').show();
				break;
			case "halifax":
				$('#show_for_city_halifax').show();
				break;
			case "ottawa":
				$('#show_for_city_ottawa').show();
				break;
			case "kitchener":
			case "london":
			case "windsor":
			case "toronto":
				$('#show_for_city_toronto').show();
				break;
			case "victoria":
			case "vancouver":
				$('#show_for_city_vancouver').show();
				break;
			case "winnipeg":
				$('#show_for_city_winnipeg').show();
				break;
			default:
				$('#show_for_city_calgary').hide();
				$('#show_for_city_edmonton').hide();
				$('#show_for_city_halifax').hide();
				$('#show_for_city_kitchener').hide();
				$('#show_for_city_london').hide();
				$('#show_for_city_ottawa').hide();
				$('#show_for_city_regina').hide();
				$('#show_for_city_saskatoon').hide();
				$('#show_for_city_toronto').hide();
				$('#show_for_city_vancouver').hide();
				$('#show_for_city_victoria').hide();
				$('#show_for_city_windsor').hide();
				$('#show_for_city_winnipeg').hide();
		}


	});
</script>

<!-- End Show For City CSS script -->


