<script type="text/javascript">

    $('.pageShell').click(function() {
        $('#check-alert').hide();
    });
    $('#tweet-signature-check').click(function() {
        if( !($('#tweet-signature-check').is(':checked')) ){
            $('#tweet-signature').slideUp('fast');
        }
        else if($('#tweet-signature-check').is(':checked')) {
            $('#tweet-signature').slideDown('fast');
        }
    });
    $("#tweet-signature-check").click(function() {
        if( !($('#tweet-signature-check').is(':checked')) ){
            $('#check-alert').toggle();
            return false;

        }
    });
    $("#submitbutton-tweet").click(function() {
        $('#tweet-signature-check').attr('checked', true);
        $('#tweet-signature').slideDown('fast');
        $("#check-alert").hide();
    });
</script>
