    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="//cdn2.hubspot.net/hub/245581/file-1965845925-js/js/ouibounce.js?t=1428092831578"></script>
	<script>
		$(document).ready(function() {
            
            // Maintain articles read count in cookie
            var blog_pvs = readCookie("blog_pageviews");
            var pageURL = document.location.href.toString();
            
            if(blog_pvs == null && (pageURL != 'http://blog.sonicbids.com/' && pageURL.indexOf('page') == -1 )){
                createCookie("blog_pageviews", "1", 180, "/");
            }

            if(blog_pvs >= 1 && (pageURL != 'http://blog.sonicbids.com/' && pageURL.indexOf('page') == -1 )){
                blog_pvs = parseInt(readCookie("blog_pageviews"));
                createCookie("blog_pageviews","",-1);
                blog_pvs = blog_pvs + 1;
                createCookie("blog_pageviews", blog_pvs, 180, "/");
            }
            
            
			// Show or hide the sticky footer button
			$(window).scroll(function() {
                
                var cookieSet = readCookie("newslettermodal");
                
                // Trigger Newsletter Popup
                
                if (cookieSet == null && $(this).scrollTop() > 1200) {
                    createCookie("newslettermodal", "true", 180);
                    //console.log("scroll point")
                    $('#newsletter-trigger').click();
    			}
                
                
				if ($(this).scrollTop() > 200) {
					$('.go-to-top').fadeIn(200);
				} else {
					$('.go-to-top').fadeOut(200);
				}
			});
