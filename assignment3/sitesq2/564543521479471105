                    $input.val(decodeURIComponent(location.pathname.split('/').join(' ').split('.').join(' ').split('-').join(' ').split('_').join('')));
                }
                $button.click(function(){
                    location.href = url + $input.val();
                });
                $input.keypress(function(e){
                    if (e.keyCode !== 13) return;
