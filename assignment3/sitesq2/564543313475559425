											<script>
												var doLogin = function() {
													jQuery.ajax({
														url: "http://inhabitat.com/wp-admin/admin-ajax.php",
														data: {
															action: 'ajax_auth_login',
															username: jQuery("#content-widget #user_login").val(),
															password: jQuery("#content-widget #user_pass").val()
														},
														dataType: 'JSON',
														type: 'POST'
													})
													.done(function(json){
														jQuery("#content-widget #login.widget-log .error").remove();
														jQuery("#content-widget #login.widget-reg .error").remove();
														jQuery("#content-widget #login.widget-log .message").remove();
														if(json.errors) {
															if(json.errors.password) {
																var errors = [];
																json.errors.password.forEach(function(error) {
																	errors.push("<strong>ERROR:</strong> " + error);
																});
																jQuery("#content-widget #password").prepend("<p class='error' style='margin-left: 80px'>"+errors.join('<br />')+"</p>");
															}

															if(json.errors.username) {
																var errors = [];
																json.errors.username.forEach(function(error) {
																	errors.push("<strong>ERROR:</strong> " + error);
																});
																jQuery("#content-widget #username").prepend("<p class='error' style='margin-left: 80px'>"+errors.join('<br />')+"</p>");
															}

															if(json.errors.default) {
																var errors = [];
																json.errors.default.forEach(function(error) {
																	errors.push("<strong>ERROR:</strong> " + error);
																});
																jQuery("#content-widget .login.mu_login").prepend("<p class='error'>"+errors.join('<br />')+"</p>");
															}

															jQuery("#content-widget .lateOverlayLostPasswd").colorbox({inline:true, href:"#lostpasswdWidget", innerWidth:"536px", innerHeight:"410px",  scrolling:false,opacity: 0.45});
														}

														if(json.result.isAuth) {
															window.location.reload(true);
														}
													})
													.fail(function() {
														jQuery("#content-widget .login.mu_login").prepend("<p class='error'>Unable to connect to server, please try again</p>");
													});
												}
											</script>
										</div>
									</div>
								</div>
							</div>      
						</div>
					</div>
				</div>
			</div>			
