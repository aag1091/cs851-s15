											<script>
												var doReg = function() {
													jQuery.ajax({
														url: "http://inhabitat.com/wp-admin/admin-ajax.php",
														data: {
															action: 'ajax_auth_reg',
															username: jQuery("#content-widget #user_name").val(),
															email: jQuery("#content-widget #user_email").val(),
															mailchimp: jQuery("#content-widget #newsletter-checkbox").is(":checked") ? jQuery("#content-widget #newsletter-checkbox").val() : ""
														},
														dataType: 'JSON',
														type: 'POST'
													})
													.done(function(json){
														jQuery("#content-widget #login.widget-log .error").remove();
														jQuery("#content-widget #login.widget-reg .error").remove();
														jQuery("#content-widget #login.widget-log .message").remove();
														if(json.errors) {
															if(json.errors.email) {
																var errors = [];
																json.errors.email.forEach(function(error) {
																	errors.push(error);
																});
																jQuery("#content-widget #email").prepend("<p class='error' style='margin-left: 80px'>"+errors.join('<br />')+"</p>");
															}

															if(json.errors.username) {
																var errors = [];
																json.errors.username.forEach(function(error) {
																	errors.push(error);
																});
																jQuery("#content-widget #userlogin").prepend("<p class='error' style='margin-left: 80px'>"+errors.join('<br />')+"</p>");
															}

															if(json.errors.mailchimp) {
																var errors = [];
																json.errors.mailchimp.forEach(function(error) {
																	errors.push(error);
																});
																jQuery("#content-widget #newsletter").prepend("<p class='error' style='margin-left: 80px'>"+errors.join('<br />')+"</p>");
															}

															if(json.errors.default) {
																var errors = [];
																json.errors.default.forEach(function(error) {
																	errors.push( error);
																});
																jQuery("#content-widget .login.mu_register").prepend("<p class='error'>"+errors.join('<br />')+"</p>");
															}

															jQuery("#content-widget .lateOverlayLostPasswd").colorbox({inline:true, href:"#lostpasswdWidget", innerWidth:"536px", innerHeight:"410px",  scrolling:false,opacity: 0.45});
														}

														if(json.result.isAuth) {
															jQuery(".login.mu_register").html(json.result.message);
															setTimeout(function(){
																window.location.reload(true);
															},5000);
														}
													})
													.fail(function() {
														jQuery("#content-widget .login.mu_register").prepend("<p class='error'>Unable to connect to server, please try again</p>");
													});
												}
											</script>
										</div>
									</div>
								</div>
							</div>      
						</div>
					</div>
				</div>
