								<div class="post-content"> 
									<div id="login" class="login widget-los">
										<h2>LOGIN</h2>
										<div class="login mu_lost" id="theme-my-login">
											<form name="lostpasswordform" id="lostpasswordform" action="http://inhabitat.com/login/?action=lostpassword" method="post">
												<p style="float: left; margin-right: 15px" id="lostlogin">
													<label for="user_login">Username or E-mail:</label>
													<input type="text" name="user_login" id="user_lost_login" class="input" value="" size="20" tabindex="5">
												</p>
												<p class="submit" style="float: left">
													<label for="wp-submit-">&nbsp;</label>
													<input type="button" name="wp-submit" id="wp-submit" value="Retrieve Password »" tabindex="6" onclick="doLost()">
													<input type="hidden" name="redirect_to" value="/login/?checkemail=confirm">
													<input type="hidden" name="instance" value="">
												</p>
											</form>
											<script>
												var doLost = function() {
													jQuery.ajax({
														url: "http://inhabitat.com/wp-admin/admin-ajax.php",
														data: {
															action: 'ajax_auth_lost',
															userlogin: jQuery("#content-widget #user_lost_login").val()
														},
														dataType: 'JSON',
														type: 'POST'
													})
													.done(function(json){
														jQuery("#content-widget #login.widget-los .error").remove();
														if(json.errors) {
															if(json.errors.userlogin) {
																var errors = [];
																json.errors.userlogin.forEach(function(error) {
																	errors.push("<strong>ERROR:</strong> " + error);
																});
																jQuery("#lostlogin").prepend("<p class='error' style=''>"+errors.join('<br />')+"</p>");
															}

															if(json.errors.default) {
																var errors = [];
																json.errors.default.forEach(function(error) {
																	errors.push("<strong>ERROR:</strong> " + error);
																});
																jQuery("#content-widget .login.mu_lost").prepend("<p class='error'>"+errors.join('<br />')+"</p>");
															}
														}

														if(json.result.hasSent) {
															jQuery("#content-widget .overlayLogin").click();
															jQuery("#content-widget #login.widget-log .message").remove();
															jQuery("#content-widget #login.widget-log .error").remove();
															jQuery("#content-widget #login.widget-reg .error").remove();
															jQuery("#content-widget .login.mu_login").prepend("<p class='message'>"+json.result.message+"</p>");
															
														}
													})
													.fail(function() {
														jQuery("#content-widget .login.mu_lost").prepend("<p class='error'>Unable to connect to server, please try again</p>");
													});
												}
											</script>
										</div>
									</div>
								</div>
							</div>      
						</div>
					</div>
				</div>
			</div>			
