<script type="text/javascript">

// create a new instance of the Mandrill class with your API key
var m = new mandrill.Mandrill('mMk9prATJJbrFG72fb4j1Q');

(function($){

	function Mandrill(options) {
		var content,
			permalink = options.permalink || "",
			title = options.title || "",
			excerpt = options.excerpt || "",
			imgTag = options.imgTag || "",
			mailShareContainer = jQuery("#mail-share");

		var browserWidth = (window.innerWidth > 0) ? window.innerWidth : screen.width;

		if ( browserWidth < 640 ) {
			return;
		}

		$("a.share-via-mandrill").attr('href','#mail-share');

		$("a.share-via-mandrill").fancybox({
			'hideOnContentClick': false,
			'width': 400,
			'height': 300,
			'autoDimensions': false,
			'hideOnOverlayClick': true,
			'padding': 0,
			'scrolling': 'no',
			'onStart': function(){
				if ( typeof options.popupOpenCallback == "function" ) {
					options.popupOpenCallback();
				}

				content = $("#mail-share-container").html();
				$("#email-submit").on("submit", function(e){
					submitEmailForm(e);
				});
			},
			'onClosed':function(){
				if ( typeof options.popupCloseCallback == "function" ) {
					options.popupCloseCallback();
				}

				$("#mail-share-container").html(content);
				$("#email-submit").off("submit");
			}
		});

		function submitEmailForm(e){
			e.preventDefault();
			var yourEmail = mailShareContainer.find("#your-email").val();
			var friendEmail = mailShareContainer.find("#friend-email").val();
			var message = mailShareContainer.find(".message").val();

			if(!validateEmail(friendEmail)){ //invalid email
				alert("Please enter valid receiver email address");
				mailShareContainer.find("#friend-email").focus();
				return false;
			}

			if(!validateEmail(yourEmail)){ //invalid email
				alert("Please enter valid sender email address");
				mailShareContainer.find("#your-email").focus();
				return false;
			}

			if(!message){ //no message
				alert("Please enter a message");
				mailShareContainer.find(".message").focus();
				return false;
			}

			sendTheMail();
		};

		function validateEmail(email) {
			var re = /\S+@\S+\.\S+/;
			return re.test(email);
			}

		// create a variable for the API call parameters
		var params = {
			"message": {
				"from_email":"your_email_address",
				"to":[{"email":"your_recipient_address"}],
				"subject": title,
				"text": "Hiya. You should drop everything you're doing and read this right now.",
				"html": "<p>Hiya. You should drop everything you're doing and read this right now.</p>via Fusion.net &gt; <a href='" + permalink + "'>" + title + "</a>"
			}
		};

		function sendTheMail() {

			if ( excerpt.length ) {
				excerpt = '<p>"' + excerpt + '"</p>';
			}

			var html = "<p>" + mailShareContainer.find(".message").val() + "</p>" +
					excerpt +
					"via Fusion.net &gt; <a href='" + permalink + "' target='_blank'>" + title + "</a>" +
					"<br/><br/><a href='" + permalink + "' target='_blank'>" + imgTag + "</a>" +
					"<br /><p>You're receiving this email because someone thought you'd like it. This is just a one-time email. " +
					"If you'd like to learn more about Fusion, check us out on "+
					"<a target='_blank' href='https://www.facebook.com/fusionmedianetwork'>Facebook</a> and " +
					"<a target='_blank' href='https://twitter.com/thisisfusion'>Twitter</a></p>";

			// Send the email!
			params["message"]["from_email"] = mailShareContainer.find("#your-email").val();
			params["message"]["to"][0]["email"] = mailShareContainer.find("#friend-email").val();
			params["message"]["html"] = html;
			m.messages.send(params, function(res) {
				mailShareContainer.addClass("success");
			}, function(err) {
				alert(err);
			});
		}
	}


	var mandrill = new Mandrill({
		permalink: "http://fusion.net/video/40509/molly-crabapple-broken-windows-broken-people/?utm_source=emailshare&amp;utm_content=sticky+nav+mandrill&amp;utm_medium=email&amp;utm_campaign=socialshare",
		title: "Molly Crabapple: How 'broken windows' policing harms people of color",
		excerpt: "Last summer, a New York city police officer choked a black grandfather named Eric Garner to death.  Garner was suspected of selling loose cigarettes.  The arrests of people like Garner are part of a controversial policing tactic called Broken Windows.  Broken Windows claims to prevent large crimes by cracking down on small ones.  But it's really about controlling and punishing communities of color, through police encounters that can sometimes be deadly. ",
		imgTag: "<img width=\"608\" height=\"342\" src=\"http:\/\/i1.wp.com\/fusiondotnet.files.wordpress.com\/2015\/02\/windows7.jpg?resize=608%2C342&amp;quality=80&amp;strip=all\" class=\"attachment-post-16x9-large\" alt=\"windows7\" width=\"608\" height=\"342\" \/>",
		popupOpenCallback: function(){
									 if ( typeof window.ooyalaPlayer.pause == "function" ) {
							window.ooyalaPlayer.pause();
						 }
									},
		popupCloseCallback: function(){
									 if ( typeof window.ooyalaPlayer.play == "function" ) {
							window.ooyalaPlayer.play();
						 }
													}
	});
}(jQuery));
</script>
