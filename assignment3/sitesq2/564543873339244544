		<script type="text/javascript">
			function getTherapyType() {
				var ga_therapies = document.getElementsByName("therapy");
				var ga_therapies_output="";
				for (var i = 0; i < ga_therapies.length; i++) {
 					ga_therapies_output += ga_therapies[i].value + ":";   
				}
				ga_therapies_output = ga_therapies_output.replace(/\:$/, '');
			
				return (doTherapyLookup(ga_therapies_output));
			}
			function doTherapyLookup(myTherapies) {
				var arr_therapies = myTherapies.split(":");
				var therapyOutput = "";
				for(var i = 0; i < arr_therapies.length; i++) {
					switch(arr_therapies[i]) {
						case "1":
							therapyOutput += "InterStim - Urinary:";
							break;
						case "2":
							therapyOutput += "Activa:";
							break;
						case "3":
							therapyOutput += "Pain - Pump:";
							break;
						case "4":
							therapyOutput += "ITB:";
							break;
						case "5":
							therapyOutput += "InterStim - Bowel:";
							break;
						case "6":
							therapyOutput += "";
							break;
						case "7":
							therapyOutput += "Enterra:";
							break;
						case "8":
							therapyOutput += "DBS - Psychiatric:";
							break;
						case "9":
							therapyOutput += "Pain - Stim:";
							break;
						case "99":
							therapyOutput += "Back  Pain:";
							break;
						default:
							therapyOutput += "";
					}				
				}
				if (therapyOutput === "") {
					therapyOutput = "Non-Neuro Therapy";	
				}
				else {
					therapyOutput = therapyOutput.replace(/\:$/, '');
				}
				return therapyOutput;			
			}
		</script>
