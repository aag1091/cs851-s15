	$(document).ready(function() {
		$("a[rel='external']").each(function(){
			//remove any previously bound events
			$(this).unbind();
			
			//change the class
			$(this).removeClass('thickbox');
			$(this).addClass('icon-external-link');

			//change target
			$(this).attr('target','_self');			
		});
			// initiate smooth scroll
			$.localScroll({
 				lazy:true
			});
	});
	
	
