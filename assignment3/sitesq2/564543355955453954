          var fbCounter = null ;
          var fbCounter1 = null;
          function updateFbCounter() {
            if (typeof FB !== 'undefined' && fbCounter == null) {
              FB.api({
                method: 'fql.query',
                query:'SELECT total_count FROM link_stat WHERE url = "http://www.hlntv.com/article/2015/02/06/target-tie-employee-advice"'
              }, function(data) {
                fbCounter = data[0].total_count;
                $('.fb-count').text(fbCounter);        
              });
            }
          }
          
          $(function () {
            $('.fb_share_link').click(function(){  
              //try_social_tracking('Social:Facebook:Share');
              fbCounter1=parseInt(fbCounter)+1;
              window.open('http://www.facebook.com/sharer/sharer.php?u=http://www.hlntv.com/article/2015/02/06/target-tie-employee-advice','mywindow','width=600,height=400');
              $('.fb-count').text(fbCounter1);
              return false;
            });
          });
