					function changeLanguage(){
						var dropDown = jQuery("#languageDropdownMobile").parent().find("select")[0];
						var selected = dropDown.options[dropDown.selectedIndex]; 
						if(selected.value != ""){
							jQuery(".mobile-menu").removeClass("mobile-menu-open");
							location.href = selected.value;  
						}
					}
