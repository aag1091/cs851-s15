<script>
    $(document).ready(function () {

        /*  var sc = $('#myScroller').radiantScroller({
         elementWidth: 82,
         elementHeight: 92,
         cols: 3,
         rows: 3,
         useMouseWheel: false,
         addPagination: false
         });*/
        $("#login_btn").click(function () {
            //jQuery('#modal_container').html('').load('/users/login', function() {
            jQuery('.sign_in_model').modal('show');
            // });
        });
        $("#btnregister").click(function () {
            jQuery('#modal_container').html('').load('/homes/register', function () {

                jQuery('.register_modal').modal('show');
            });
        });
        // change password modal dialog
        $("#change_password_btn").click(function () {
            jQuery('#modal_container').html('').load('/users/change_password', function () {
                jQuery('.password-reset-modal').modal('show');
            });
        });
        // forgot password modal dialog
        $(document).on("click", "#forgot_password_btn", function () {
            jQuery('#modal_container').html('').load('/users/forgot_password', function () {
                jQuery('.forgot_password_model').modal('show');
            });
        });
        $('#UserRegisterForm').validate({
            messages: {
                terms: {
                    required: 'select terms and privacy policy',
                }
            }

        });
        $('#UserUsername').change(function () {
            if ($(this).val() != '') {
                $.ajax({
                    dataType: 'HTML',
                    type: 'POST',
                    url: '/users/createSlug',
                    data: 'username=' + $(this).val() + "&base_url=" + 'http://www.talentstar.me/',
                    success: function (response) {
                        $("#UserUniqueUrl").val(response);
                    }
                });
            }
        });
        $("#terms").change(function () {
            if ($("#terms").is(':checked')) {
                $(this).val('1');
            } else {
                $(this).val('0');
            }
            return false;
        });

    });

    $("#UserResetPasswordForm").validate({
        rules: {
            'data[User][password]': {
                required: true,
            },
            'data[User][cpassword]': {
                equalTo: "#reset_password",
            }
        }
    });
    $(document).ready(function () {
        $('#redirect').attr('value', window.location);
        $('.alert').delay(3000).fadeOut(500);
    });

function lookup(inputString) {
            var i = inputString;
            var q = $.trim(i.replace(/[^a-z0-9\s]/gi, '').replace(/[_\s]/g, ' '));
     
	if(q.length == 0) {
		$('#suggestions').fadeOut(); // Hide the suggestions box
	} else {
		$.post("/search", {queryString: ""+q+""}, function(data) { // Do an AJAX call
			$('#suggestions').fadeIn(); // Show the suggestions box
			$('#suggestions').html(data); // Fill the suggestions box
		});
	}
}
   /*Search Functionality ----------------------------*/
$(document).on('blur','#inputString',function(){
        $('#suggestions').fadeOut(300);
});
$(document).on('keyup','#inputString',function(){
         
            var i = $('#inputString').val();;
            var q = $.trim(i.replace(/[^a-z0-9\s]/gi, '').replace(/[_\s]/g, ' '));
            $('#inputString').val(q);
        if(q.length == 0){
             $('#suggestions').fadeOut(300);
        }else{
            
        $('#suggestions').fadeIn(300);
        $('#suggestions').html('<img src="/images/lightbox-ico-loading.gif">');
            }
});


</script>
