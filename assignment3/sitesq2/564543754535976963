  // IE8 and older fix for displaying top related images
  $(function () {
    if (DN.Utils.Browser.getInternetExplorerVersion() > 8)
      return;

    $('#top-video-content').find('#related-list .image-container a').each(
        function (index, el) {
          element = $(el);

          if (element.attr('filter_url') != undefined) {
            var newStyle = element.attr('style') +
                ";-ms-filter: \"progid:DXImageTransform.Microsoft.AlphaImageLoader(src='" +
                element.attr('filter_url') +
                "',sizingMethod='scale')\";";

            element.attr('style', newStyle);
          }
        });
  });
