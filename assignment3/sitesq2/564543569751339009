        function move() {
            var h = $('#scroll > div > img:first').height();
            if (!scrolling) {
            scrolling = true;
            $('#scroll > div').css('margin-top', 0)
                .animate({'margin-top': -h}, 200000, 'linear', function() {
                    scrolling = false;
                    if (scrollTimer) move();
                });
            }
        }

        var modalTimer;
        var scrollTimer = false;
        var scrolling = false;
        var modalReturn = false;
        $('#signin').on('shown', function() {
            clearTimeout(modalTimer);
        });
        $('#signin2').on('show', function() {
            return $('.modal:visible').length == 0;
        });
        $('#signin2').on('hide', function() {
            scrollTimer = false;
            if (modalReturn) { 
                if (modalReturn.attr('target')=='_blank')
                    window.open(modalReturn.attr('href'));
                modalReturn.click();
                modalReturn = false;
            }
        });
        $('#signin').on('click', '.signin-images a', function() {
