      evt.type='addthis.menu.share';
      evt.data={};
      evt.data.service='facebook_like';
      evt.data.thesource='our_button';
      shareEventHandler(evt);
    }
  });
  $('#twitter-share').twitterbutton({
    title: "The Innovative State",
    url: 'http://fam.ag/1DxAbtC',
    count_url: "http:\/\/www.foreignaffairs.com\/articles\/142496\/mariana-mazzucato\/the-innovative-state",
    user:'ForeignAffairs',
    user_description:'In-depth insight and analysis on international affairs and U.S. foreign policy since 1922.',
    layout:'none',
    ontweet:function(response){
      evt = new Object();
      evt.type='addthis.menu.share';
      evt.data={};
      evt.data.service='twitter_tweet';
      evt.data.thesource='our_button';
