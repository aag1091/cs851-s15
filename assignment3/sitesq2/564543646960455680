// Alert a message when the user shares somewhere
function shareEventHandler(evt) {
    if (evt.type == 'addthis.menu.share') {
  if ((evt.data.service != 'facebook_like' && evt.data.service != 'twitter_tweet') || ((evt.data.service == 'facebook_like' && evt.data.thesource == 'our_button') || (evt.data.service == 'twitter_tweet' && evt.data.thesource == 'our_button'))) {
          s.prop29 = evt.data.service;
          s.prop30 = 'social_media_share';
          s.prop31 = 'social_media_share|'+evt.data.service;
          s.prop32 = media_title+'|'+'social_media_share';
          s.prop33 = media_title+'|'+'social_media_share|'+evt.data.service;
                s.eVar29=s.prop29;
                s.eVar30=s.prop30;
                s.eVar31=s.prop31;
                s.eVar32=s.prop32;
                s.eVar33=s.prop33;
    s.linkTrackVars="eVar3,eVar35,eVar29,eVar30,eVar31,eVar32,eVar33,prop5,prop7,prop29,prop30,prop31,prop32,prop33,pageName,channel,events";
    s.events='event10';
    s.linkTrackEvents="event10";
    s.tl(true,'o',evt.data.service);
  }
    }
}

function gplus_callback(r) {
  if (r.state == 'on') {
    evt = new Object();
    evt.type='addthis.menu.share';
    evt.data={};
    evt.data.service='google_plusone';
    shareEventHandler(evt);
  }
}

// Listen for the share event
addthis.addEventListener('addthis.menu.share', shareEventHandler);
/* ]]> */
</script>
