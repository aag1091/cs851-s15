function track_omniture_paywall(evar_id,state,event) {
  if(event !== undefined) {
    s.linkTrackEvents=event;
    s.events = event;
  }
  s.prop58 = s.eVar58 = 'paywall view';
  s.prop59 = s.eVar59 = 'login';
  s.linkTrackVars= 'eVar58,eVar59';
  s['eVar'+evar_id] = s['prop'+evar_id] = state;
  if (state == 'free view') {
    s.prop58 = s.prop59 = s.eVar58 = s.eVar59 = 'open view';
  }
  s.tl(true, 'o', state);
}
$(".premium-box-link").click(function(){$(".premium-box-form").hide();});
