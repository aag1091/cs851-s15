	<script type="text/javascript">
		jQuery(function() {
			console.log('done');
			jQuery('.make-guess').click( function (event) {
				event.preventDefault();
				console.log('clicked');
				jQuery('.guess-response').hide();
				jQuery("[name='guess']").removeClass('greenBorder');
				jQuery("[name='guess']").removeClass('redBorder');
				
				jQuery("[name='fname']").removeClass('greenBorder');
				jQuery("[name='fname']").removeClass('redBorder');
				
				jQuery("[name='lname']").removeClass('greenBorder');
				jQuery("[name='lname']").removeClass('redBorder');
				
				jQuery("[name='address']").removeClass('greenBorder');
				jQuery("[name='address']").removeClass('redBorder');
				
				jQuery("[name='city']").removeClass('greenBorder');
				jQuery("[name='city']").removeClass('redBorder');
				
				jQuery("[name='state']").removeClass('greenBorder');
				jQuery("[name='state']").removeClass('redBorder');
				
				jQuery("[name='zip']").removeClass('greenBorder');
				jQuery("[name='zip']").removeClass('redBorder');
				
				jQuery("[name='email']").removeClass('greenBorder');
				jQuery("[name='email']").removeClass('redBorder');
				
				jQuery("[name='phone']").removeClass('greenBorder');
				jQuery("[name='phone']").removeClass('redBorder');
				
				errorCount = 0;
				
				//validate form
				if( jQuery("[name='guess']").val().length > 1 ) {
					jQuery("[name='guess']").addClass('greenBorder');
				} else {
					jQuery("[name='guess']").addClass('redBorder');
					errorCount = errorCount + 1;
				}
				//validate form
				if( jQuery("[name='fname']").val().length > 1 ) {
					jQuery("[name='fname']").addClass('greenBorder');
				} else {
					jQuery("[name='fname']").addClass('redBorder');
					errorCount = errorCount + 1;
				}
				//validate form
				if( jQuery("[name='lname']").val().length > 1 ) {
					jQuery("[name='lname']").addClass('greenBorder');
				} else {
					jQuery("[name='lname']").addClass('redBorder');
					errorCount = errorCount + 1;
				}
				//validate form
				if( jQuery("[name='address']").val().length > 5 ) {
					jQuery("[name='address']").addClass('greenBorder');
				} else {
					jQuery("[name='address']").addClass('redBorder');
					errorCount = errorCount + 1;
				}
				//validate form
				if( jQuery("[name='city']").val().length > 2 ) {
					jQuery("[name='city']").addClass('greenBorder');
				} else {
					jQuery("[name='city']").addClass('redBorder');
					errorCount = errorCount + 1;
				}
				//validate form
				if( jQuery("[name='state']").val().length > 1 ) {
					jQuery("[name='state']").addClass('greenBorder');
				} else {
					jQuery("[name='state']").addClass('redBorder');
					errorCount = errorCount + 1;
				}
				//validate form
				if( jQuery("[name='zip']").val().length > 4 ) {
					jQuery("[name='zip']").addClass('greenBorder');
				} else {
					jQuery("[name='zip']").addClass('redBorder');
					errorCount = errorCount + 1;
				}
				//validate form
				if( jQuery("[name='email']").val().length > 1 ) {
					jQuery("[name='email']").addClass('greenBorder');
				} else {
					jQuery("[name='email']").addClass('redBorder');
					errorCount = errorCount + 1;
				}
				//validate form
				if( jQuery("[name='phone']").val().length > 1 ) {
					jQuery("[name='phone']").addClass('greenBorder');
				} else {
					jQuery("[name='phone']").addClass('redBorder');
					errorCount = errorCount + 1;
				}
				
				var addMe = "";
				if ( jQuery("input[name='joinlist']").is(':checked') ) {
					addMe = "&join=yes";
				} 

				//if valid, ajax vote and display results
				if( errorCount == 0 ) {
					var jsonResults = jQuery.getJSON('http://www.mrspotter.com/wp-content/themes/mrspotter/ajax/submitGuess.php?guess='+jQuery("[name='guess']").val()
					+ '&fname=' + jQuery("[name='fname']").val()
					+ '&lname=' + jQuery("[name='lname']").val()
					+ '&address=' + jQuery("[name='address']").val()
					+ '&city=' + jQuery("[name='city']").val()
					+ '&state=' + jQuery("[name='state']").val()
					+ '&zip=' + jQuery("[name='zip']").val()
					+ '&email=' + jQuery("[name='email']").val()
					+ '&phone=' + jQuery("[name='phone']").val()
					+ addMe, function(data) { /*alert(data);*/ })
						.done(function(data) { 
							//alert('done' + data.status + data.message );
							jQuery('.guess-response').text( data.message ).show();
							//jQuery(this).hide();
						})
						.fail(function(data, textStatus, error){
		
							jQuery('.guess-response').text( data.message ).show();
						})
						.always(function() {
							//alert('always');
						});
					
					
					
				} else {
					//errors, do nothing
				}
				
			
			});
		});
