	<script>

    /** Facebook initialization callback */
    window.fbAsyncInit = function () {

      FB.init(window.facebook_config); // Config Stuff Fred set up

      // Moved login status check directly after FB.init
			FB.getLoginStatus(function(response) {

				if (response.status === 'connected') {

					var uid = response.authResponse.userID;
					var accessToken = response.authResponse.accessToken;

					// Check to see if authed users is the same one logged in via WordPress
					fb_user_id = $('#fb_user_id').html();

					if (fb_user_id == uid) {

						// The current logged in FB User has a matching FB_USER_ID to the
						// current logged in WP User. So

						FB.api('/me', function(response) {

							user_image = "http://graph.facebook.com/" + response.id + "/picture?type=small";
							user_name = response.first_name;
							user_city = response.location.name;

							$('#logged_in_user_image').show();
							$('#logged_in_user_image').attr("src",user_image);
							$('#logged_in_user_first_name').html(user_name);
							$('#logged_in_user_city').html(user_city);

						});

					}

					else if (fb_user_id) {

						// The current logged in FB User isn't the same one that is logged into
						// WP right now, so just display the default data based upon RUBS & WP_User_Id

					}

					// LDC-927 "Drinking is Better with Friends" module
					// Adding a jQuery custom event for fb-root
					$('#fb-root').trigger('facebook:ready'); // Bind Facebook SDK initialization to a jQuery event.


				} else if (response.status === 'not_authorized') {

					// the user is logged in to Facebook,
					// but has not authenticated your app


				} else {

					// There isn't anyone logged in via FB and PHP has populated everything
					// for us as this point based upon RUBS Data & WP_User_ID

				}

			});

    };

