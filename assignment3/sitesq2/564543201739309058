	<script type="text/javascript">
		(function($){
			//console.log("md");
			//cache nav
			var nav = $("#menu");
			
			nav.find("li").each(function() {
				if ($(this).find("ul").length > 0) {					
					//show subnav on hover
					$(this).mouseenter(function() {
											
						$(".m_left").find("ul").css("display","none");
						
						var ele = $(this).find("ul:first");
						if(ele.hasClass("m_left")){
							//ele.stop(true, true).show("slide",{easing:"easeOutCubic"});
							ele.stop(true, true).show();
						}else{
							ele.stop(true, true).slideDown();
						}
					});					

					$(this).mouseleave(function() {
						
						$(".m_left").find("ul").css("display","none");
						var ele = $(this).find("ul");
						
						if(ele.hasClass("m_left")){
							ele.stop(true, true).hide();								
						}else{
							ele.stop(true, true).slideUp();
						}							
					});
				}
			});
		})(jQuery);	
	</script>
</body>
