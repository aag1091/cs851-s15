    $('.commentScore span').each(function (a, b) {
        var v = parseInt($(this).html());
        
        if (isNaN(v) || v === 0) {
            return;
        }else if (v > 0) {
            $(this).parent().removeClass().addClass('commentScorePlus');
        }
        else {
            $(this).parent().removeClass().addClass('commentScoreMinus');
        }


    });
</script>



