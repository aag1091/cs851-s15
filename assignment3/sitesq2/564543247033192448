$(document).bind('dropItShow', function(){
    $('#user-register input').focus();
});
$('#user-register').submit(function(e){
    $('#user-register-errors').html('');
    $.ajax({
        url: $(this).attr('action'),
        method: "POST",
        data: $(this).serialize(),
        success: function(r) {
            if(r.success === true) {
                $('#user-register').replaceWith('<p><strong>Thank you.</strong></p><p>Please check your inbox to verify your email address.</p>');
            }
            else
            {
            	$('#user-register-errors').html('<div class="validateError">' + r.errors.regemail + '</div>');
            }
        }
    });
    e.preventDefault();
});
