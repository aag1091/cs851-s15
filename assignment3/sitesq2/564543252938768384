<script type='text/javascript'>
//<![CDATA[
	// Lightbox Configuration
	LightboxOptions = Object.extend({
	    fileLoadingImage:        'http://profootballspot.com/public/style_images/Denver_Broncos/lightbox/loading.gif',
	    fileBottomNavCloseImage: 'http://profootballspot.com/public/style_images/Denver_Broncos/lightbox/closelabel.gif',
