                  <a id="main-content-area"></a>
                  										                    <div id="title-group" class="title-group">
                      <div class="inner clearfix">
                        <h1 class="title"><span>Fortitude episode 2 review</span></h1>
                                              </div><!-- /title-group-inner -->
                    </div><!-- /title-group -->
                                      
                                                      
                  
                                        <!-- content region -->
  <div id="content" class="region region-content content nested grid24-16">
    <div id="content-inner" class="content-inner inner clearfix">
    <div id="block-system-main" class="block block-system">
  <div class="gutter inner clearfix">
            
    <div class="content clearfix">
      
<div class="node node-article node-promoted odd node-full clearfix" about="/tv/fortitude/33999/fortitude-episode-2-review" typeof="sioc:Item foaf:Document">

  <div id="node-top" class="node-top region nested">
      </div>

  <div class="content">
    <div class="meta">
      <div class="meta-inner clearfix">
        <div id="node-article-full-group-meta" class=" group-meta field-group-div"><span class="field field-name-field-article-type field-type-taxonomy-term-reference field-label-hidden">
      <span class="field-item even">Review</span>
  </span><span class="field field-name-field-author field-type-node-reference field-label-hidden">
      <span class="field-item even"><a href="/authors/michael-noble">Michael Noble</a></span>
  </span><span class="field field-name-field-published-date field-type-datetime field-label-hidden">
  <span class="field-item even"><span class="date-display-single" property="dc:date" datatype="xsd:dateTime" content="2015-02-08T19:52:00+00:00">8 Feb 2015 - 19:52</span></span>
</span></div>        <span class="share-top">
        <div class="share-top"><!-- AddThis Button BEGIN --><span  class="addthis_toolbox addthis_default_style clearfix"><a class="addthis_button_print"></a>
<a class="addthis_button_email"></a>
