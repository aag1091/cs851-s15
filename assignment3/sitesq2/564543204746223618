function adaptCallback(i, width) {
      var html = document.documentElement;
      html.className = html.className.replace(/(\s+)?width\-(mobile|tablet-portrait|desktop|widescreen)/g, '');
      if (i > -1) {
        var ranges = { 0: 'mobile', 1: 'tablet-portrait', 2: 'desktop', 3: 'widescreen' };
        var classname = ' width-' + ranges[i];
        html.className += classname;
        viewportWidth = ranges[i];
      }
    }
    var ADAPT_CONFIG = {
    dynamic: true,
    callback: adaptCallback,
    range: [ '0 to 760', '760 to 980', '980 to 1200', '1200' ]
    };
