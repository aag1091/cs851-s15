<script type="text/javascript">
	var isMobile = {
		Android: function() {
			return /Android/i.test(navigator.userAgent);
		},
		BlackBerry: function() {
			return /BlackBerry/i.test(navigator.userAgent);
		},
		iOS: function() {
			return /iPhone|iPad|iPod/i.test(navigator.userAgent);
		},
		Windows: function() {
			return /IEMobile/i.test(navigator.userAgent);
		},
		Kindle: function(){
			return /Kindle/i.test(navigator.userAgent) || /Silk/i.test(navigator.userAgent) || /KFTT/i.test(navigator.userAgent) || /KFOT/i.test(navigator.userAgent) || /KFJWA/i.test(navigator.userAgent) || /KFJWI/i.test(navigator.userAgent) || /KFSOWI/i.test(navigator.userAgent) || /KFTHWA/i.test(navigator.userAgent) || /KFTHWI/i.test(navigator.userAgent) || /KFAPWA/i.test(navigator.userAgent) || /KFAPWI/i.test(navigator.userAgent);
		},
		any: function() {
			return (isMobile.Android() || isMobile.BlackBerry() || isMobile.iOS() || isMobile.Windows() || isMobile.Kindle());
		}
	};

	var al; // app link
	var sl; // store link
	if (isMobile.iOS()){
		al = "fb144618135678502://";
		sl = "itms-apps://itunes.apple.com/app/id553573601";
	}
	else if (isMobile.Kindle()){
		al = "fb144618135678502://";
		sl = "amzn://apps/android?p=net.odasoft.xtremeslots";
	}
	else if (isMobile.Android()){
		al = "fb144618135678502://";
		sl = "market://details?id=net.odasoft.xtremeslots";
	}
	else { // PC or MAC --> Facebook
		al = "https://apps.facebook.com/xtremeslots/";
		sl = al;
	}

	document.write("Redirecting... click <a href='"+sl+"'>here</a> if it doesn't automatically happen within a few seconds.");

	setTimeout(function () { window.location = sl; }, 1000);
	window.location = al+location.search;
</script>

