      jQuery(this).css('width', '100%');
	  jQuery(this).css('height', '100%');
	  
  });*/
  
  		
	jQuery('article.node-blogs .node-content .field-name-body img, article.node-story .node-content .field-name-body img').each(function(i,el){
	  var img = jQuery(el);
	 var width_Img = img.width();
  if (width_Img > 509) {
	jQuery(this).removeAttr('width');
    jQuery(this).removeAttr('height');	 
    jQuery(this).css('max-width', '100%');
	jQuery(this).css('width', '100%');
    jQuery(this).css('height', '100%');
	}
  
   if( (width_Img >400)&&(width_Img <509)) {
   jQuery(this).removeAttr('width');
   jQuery(this).removeAttr('height');	 
   jQuery(this).css('max-width', '450px');
   jQuery(this).css('width', '100%');		
   jQuery(this).css('height', '100%'); 
   }
   
    if( (width_Img >300)&&(width_Img <400)) {
    jQuery(this).removeAttr('width');
    jQuery(this).removeAttr('height');	  
    jQuery(this).css('max-width', '350px');
    jQuery(this).css('width', '100%');		
    jQuery(this).css('height', '100%');
   }
   
    if(width_Img < 300) {  
    jQuery(this).removeAttr('width');
	jQuery(this).removeAttr('height');	   
    jQuery(this).css('max-width', '200px');
    jQuery(this).css('width', '100%');	
    jQuery(this).css('height', '100%');
   }   
    });
	
	
	jQuery('html body.two-sidebars article .node-content div.field-name-field-node-image img.image-style-fullnode-image').each(function(){
      jQuery(this).removeAttr('width');
	  jQuery(this).removeAttr('height');
	  jQuery(this).addClass('manage-media');
      jQuery(this).css('max-width', '510px');
      jQuery(this).css('width', '100%');
	  jQuery(this).css('height', '100%');
	  
  });
	
	jQuery('html body.two-sidebars article .node-content div.field-name-field-node-image img.image-style-fullnode-image').each(function(){
      jQuery(this).removeAttr('width');
	  jQuery(this).removeAttr('height');
	  jQuery(this).addClass('manage-media');
      jQuery(this).css('max-width', '510px');
      jQuery(this).css('width', '100%');
	  jQuery(this).css('height', '100%');
	  
  });
  
  
  
  
  jQuery('article.node-blogs .node-content iframe, article.node-story .node-content iframe').each(function(){
      jQuery(this).removeAttr('width');
	  jQuery(this).css('max-width', '510px');
      jQuery(this).css('width', '100%');
  });
  
   jQuery('article.node-blogs .node-content object, article.node-story .node-content object').each(function(){
      jQuery(this).removeAttr('width');
	  jQuery(this).css('max-width', '510px');
      jQuery(this).css('width', '100%');
	
  });
  
    jQuery('article.node-blogs .node-content object embed, article.node-story .node-content object embed').each(function(){
      jQuery(this).removeAttr('width');	
      jQuery(this).css('max-width', '510px');
      jQuery(this).css('width', '100%');
	
  });
  

jQuery(".fa-bars, .menu-nav .fa-times").click(function() {
	jQuery(".menu").toggleClass("show");
	jQuery(".fa-bars, .fa-bars span").toggleClass("hidden");
	jQuery(".fa-times").toggleClass("show");
});

  
  });

</script>

