	jQuery(function($){
		var stayConnectedModule = $('#apps-feeds_content');
		var detailedItems = stayConnectedModule.find('li');
		var bubbles = stayConnectedModule.find('.af-bubble');

		detailedItems.hover(
			function(){
				var currentItem = $(this);
				currentItem
					.find('.af-bubble')
					.addClass('show');
			}, 
			function(){
				bubbles.removeClass('show');
			}
		);
	});
	
</script>
